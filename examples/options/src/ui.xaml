<Background xmlns='https://a1-triard.github.io/tvxaml/2025/xaml'>
  <Frame HAlign="Center" VAlign="Center" TextAlign="Center" Text="Options">
    <StackPanel Margin="1,0,1,0" HAlign="Center">
      <StackPanel>
        <CheckBox Text="Option ~1~" />
        <CheckBox Text="Option ~2~" IsChecked="True" />
        <GroupBox HeaderText="Radio Buttons xxxxxxxxxxxxxxxxxxx">
          <StackPanel Margin="1,0,1,0">
            <RadioButton Text="~R~adio Button 1" IsChecked="True" Group="A" />
            <RadioButton Text="R~a~dio Button 2" Group="A" />
          </StackPanel>
        </GroupBox>
      </StackPanel>
      <StackPanel Vertical="False" HAlign="Center" SecondaryFocusKeys="LeftRight">
        <Button Text="~O~K" />
        <Button Text="~C~ancel" Margin="3,0,0,0" />
      </StackPanel>
    </StackPanel>
  </Frame>
</Background>
